<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Vision"
             Title="The Face">
    <ContentPage.Content>
        <StackLayout Margin="20" Orientation="Vertical">
            <Label TextColor="#77d065" FontSize ="20" Text="Browse a photo to compare" />
            <Button x:Name="myButton" Text="Browse..." Clicked= "browsePhoto" />
            <Image x:Name="imageGallery" HeightRequest="100" WidthRequest="50"/>
            <Label TextColor="#77d065" FontSize="20" Text="Take a photo"/>
            <Button Text="Launch Camera and Analyse" Clicked="loadCamera" />
            <Image x:Name="image" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>